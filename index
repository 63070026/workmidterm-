            var images = ["img/c1.jpg","img/c2.jpg", "img/c3.jpg", "img/c4.jpg", "img/c5.jpg", "img/c6.jpg"]
            function myImage() {
                var x = Math.floor((Math.random()*6)+1);
                console.log(x)
                document.getElementById("image").src = images[x-1];
                }
